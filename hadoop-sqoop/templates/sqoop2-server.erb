#File managed by Puppet, Any changes will be overwritten on next puppet run

# Set CATALINA_BASE to:
#   /usr/lib/sqoop2/sqoop-server for YARN clusters
#   /usr/lib/sqoop2/sqoop-server-0.20 for MR1 clusters
CATALINA_BASE=/usr/lib/sqoop2/sqoop-server-0.20

export JAVA_HOME=<%= scope.lookupvar('java::params::java_base') %>/jdk<%= scope.lookupvar('java::params::java_version') %>

SQOOP_USER=sqoop2
SQOOP_CONFIG=/etc/sqoop2/conf
SQOOP_LOG=/var/log/sqoop2
SQOOP_TEMP=/var/run/sqoop2
SQOOP_PID=/var/run/sqoop2/sqoop-server-sqoop2.pid
CATALINA_BIN=/usr/lib/bigtop-tomcat/bin
CATALINA_TMPDIR=/var/tmp/sqoop2
CATALINA_OPTS=-Xmx512m
CATALINA_OUT=/var/log/sqoop2/sqoop-tomcat.log